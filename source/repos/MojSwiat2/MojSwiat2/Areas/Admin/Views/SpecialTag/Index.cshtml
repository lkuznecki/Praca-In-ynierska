@using MojSwiat2.Models;
@model IEnumerable<MojSwiat2.Models.SpecialTag>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div>
    <div class="col-6">
        <h2 class="text-info">Special Tag List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; New Special Tag</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.SpecialTags)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SpecialTags</td>
                <td>
                    <partial name="_TagPageButtonPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>
